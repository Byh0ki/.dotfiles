general {
	output_format = "i3bar"
	colors = true
	interval = 1
}

order += "ipv6"
order += "disk /home"
# order += "wireless wlan0"
order += "ethernet br_cri_lab"
# order += "battery 0"
order += "cpu_temperature 0"
order += "volume master"
order += "cpu_usage"
# order += "load"
order += "tztime local"

volume master {
	device = "default"
	mixer = "Master"
	mixer_idx = 0
	format = "â™ª: %volume"
	format_muted = "â™ª: muted (%volume)"
}

wireless wlan0 {
       format_up = "W: (%quality at %essid, %bitrate) %ip"
       format_down = "W: down"
}

ethernet br_cri_lab {
       # if you use %speed, i3status requires the cap_net_admin capability
       format_up = "E: %ip"#" (%speed)"
       format_down = "E: down"
}

battery 0 {
       format = "%status %percentage %remaining %emptytime"
       format_down = "No battery"
       status_chr = "âš¡ CHR"
       status_bat = "ðŸ”‹ BAT"
       status_unk = "? UNK"
       status_full = "â˜» FULL"
       path = "/sys/class/power_supply/BAT%d/uevent"
       low_threshold = 10
}

tztime local {
       format = "%d/%m/%Y %H:%M:%S"
}

cpu_usage {
			format = "CPU: %usage"
}

load {
       format = "%1min"
}

